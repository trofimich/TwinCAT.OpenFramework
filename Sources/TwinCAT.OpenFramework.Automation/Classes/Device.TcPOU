END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF _SimulationModeOverride = value THEN
	TrySetSimulationModeOverride := TRUE;
	RETURN;
END_IF
  
IF ChildSimulationModeCanBeChanged THEN
	_SimulationModeOverride := value;
	
	TrySetSimulationModeOverride := TRUE;	
END_IF]]></ST>
