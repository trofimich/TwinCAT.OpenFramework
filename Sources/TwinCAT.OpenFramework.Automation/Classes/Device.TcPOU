    <Method Name="TrySetSimulationModeOverride" Id="{037872d8-8455-4270-b703-fa8d0169ad6e}">
      <Declaration><![CDATA[{attribute 'TcRpcEnable':='1'}
METHOD FINAL TrySetSimulationModeOverride : BOOL
VAR_INPUT
