    <Method Name="OnProcessInput" Id="{a28fb2bd-177b-4c2a-9df6-5bfe86d8083d}">
      <Declaration><![CDATA[METHOD PROTECTED OnProcessInput]]></Declaration>
      <Implementation>
        <ST><![CDATA[_PreviousValue := _CurrentValue;

IF NOT SimulationMode THEN
	_CurrentValue  := _PhysicalContactValue;
ELSE
	_CurrentValue := SimulatedContactValue;
END_IF]]></ST>
