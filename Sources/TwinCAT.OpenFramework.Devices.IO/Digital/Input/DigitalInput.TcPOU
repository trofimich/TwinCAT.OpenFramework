FUNCTION_BLOCK DigitalInput EXTENDS Automation.InputDevice IMPLEMENTS IDigitalInput
VAR_INPUT
	SimulatedContactValue : BOOL;
END_VAR
VAR
	_ClassName : STRING := __POUNAME();
	
	_ContactType : CONTACT_TYPE;
	
	_CurrentValue : BOOL;
	_PreviousValue : BOOL;
	
	_PhysicalContactValue AT %I* : BOOL;
END_VAR]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
