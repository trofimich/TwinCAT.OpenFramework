      </Get>
    </Property>
    <Method Name="Execute" Id="{cddfd6b6-d698-4df7-b955-3cc076d37dea}">
      <Declaration><![CDATA[METHOD FINAL Execute
VAR
	i : INT;
			
	initialized : BOOL;
	
	exceptionCode : __SYSTEM.ExceptionCode;
	exception : IException;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[GlobalState.CodeExecutionPhase := TRUE;

Core.SystemDateTimeManager.Execute();		

Core.LogManager.Execute();

IF Core.SystemDateTimeManager.SystemTimeValid THEN
	//_ExecutionContext.CycleLocalStartTime := Core.SystemDateTimeManager.SystemLocalDateTime;
	//_ExecutionContext.CycleUtcStartTime := Core.SystemDateTimeManager.SystemUtcDateTime;
	
	CASE _State OF
		AUTOMATION_RUNNER_STATE.INITIALIZING:
			IF NOT __ISVALIDREF(Controllers) THEN
				_State := AUTOMATION_RUNNER_STATE.INITIALIZATION_FAILED;		
				InitializationErrorMessage := "Controllers property is null";
				RETURN;		
			END_IF

			initialized := TRUE;
			
			FOR i := 0 TO _ControllerCount - 1 DO
				IF Controllers[i] = 0 THEN
					_State := AUTOMATION_RUNNER_STATE.INITIALIZATION_FAILED;
					InitializationErrorMessage := WideStrings.ConcatStrings255("Controller[", TO_WSTRING(i), "] is null");
					EXIT;					
				END_IF

				Controllers[i].Initialize();
				
				CASE Controllers[i].State OF
					AUTOMATION_CONTROLLER_STATE.FAULT:
						_State := AUTOMATION_RUNNER_STATE.INITIALIZATION_FAILED;
						InitializationErrorMessage := WideStrings.ConcatStrings255("Controller[", TO_WSTRING(i), "] failed");
						EXIT;
						
					AUTOMATION_CONTROLLER_STATE.INITIAL:
						initialized := FALSE;						
				END_CASE
			END_FOR		
			
			IF initialized THEN
				_State := AUTOMATION_RUNNER_STATE.RUNNING;
			END_IF
		
		AUTOMATION_RUNNER_STATE.RUNNING:
			FOR i := 0 TO _ControllerCount - 1 DO
				Controllers[i].Execute();			
			END_FOR		
	END_CASE

END_IF

Core.ExceptionManager.Cleanup();
Core.DynamicMemoryManager.CleanupMemory();

GlobalState.CycleCounter := GlobalState.CycleCounter + 1;
GlobalState.CodeExecutionPhase := FALSE;]]></ST>
      </Implementation>
    </Method>
