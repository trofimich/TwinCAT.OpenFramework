    <Method Name="TryGetAutomationControllerByIndex" Id="{24622356-d6c8-4a30-a975-e7a7aa358d86}">
      <Declaration><![CDATA[METHOD FINAL TryGetAutomationControllerByIndex : IAutomationController
VAR_INPUT
	index : BYTE;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF index < 0 OR_ELSE index >= _ControllerCount OR_ELSE NOT __ISVALIDREF(Controllers) THEN
	RETURN;
END_IF

TryGetAutomationControllerByIndex := Controllers[index];]]></ST>
      </Implementation>
