    <Method Name="AssignToString" Id="{4e181416-d833-48b8-b605-97d9ed4518a3}">
      <Declaration><![CDATA[METHOD AssignToString : BOOL
VAR_INPUT
	targetString : ANY_STRING;
END_VAR
VAR
	invalidTargetStringTypeException : ArgumentTypeNotSupportedException;
	invalidTargetStringSizeException : TargetVariableMemoryOwerflowException;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF targetString.TypeClass <> __SYSTEM.TYPE_CLASS.TYPE_WSTRING THEN
	invalidTargetStringTypeException.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), 'targetString', targetString.TypeClass);
END_IF

IF targetString.diSize < TO_DINT(StringRealSize) + STRING_CHAR_SIZE THEN
	invalidTargetStringSizeException.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), 'targetString', TO_ULINT(targetString.diSize));
END_IF

AssignToString := Tc2_System.MEMCPY(targetString.pValue, _String, TO_UDINT(StringRealSize)) = StringRealSize;

Tc2_System.MEMSET(targetString.pValue + StringRealSize, 0, STRING_CHAR_SIZE);]]></ST>
      </Implementation>
    </Method>
