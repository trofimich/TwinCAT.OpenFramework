      <Get Name="Get" Id="{d120e015-6224-47c6-9bd9-37bee31389df}">
        <Declaration><![CDATA[VAR
	address : PVOID;
	addressString : STRING(23);
END_VAR]]></Declaration>
        <Implementation>
          <ST><![CDATA[address := THIS;

addressString := Tc2_Utilities.DATA_TO_HEXSTR(ADR(address), SIZEOF(address), FALSE);

StringHelper.ReplaceInSource(addressString, ' ', '');

Name := WideStringHelper.ConcatStrings255(TO_WSTRING(ClassName), " (", TO_WSTRING(addressString), ")");]]></ST>
        </Implementation>
      </Get>
