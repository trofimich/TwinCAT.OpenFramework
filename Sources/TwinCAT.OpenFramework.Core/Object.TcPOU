    <Method Name="ToLogString" Id="{0a892b58-fb3d-4452-8b29-2d0341433629}">
      <Declaration><![CDATA[// Returns a string representation of the object for debugging and logging purposes.
// It is recommended to include key properties in a human-readable format.
METHOD ToLogString : WSTRING(255)
VAR_INST
	cachedResult : WSTRING(255);
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF cachedResult = "" THEN
	WideStringHelper.AppendToTarget255(cachedResult, TO_WSTRING(NamespaceName), ".", TO_WSTRING(ClassName));
END_IF 

ToLogString := cachedResult;]]></ST>
      </Implementation>
