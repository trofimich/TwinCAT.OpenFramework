    <Method Name="Find" Id="{f870e801-4961-0438-0486-eeff60dc3fea}">
      <Declaration><![CDATA[METHOD Find : BOOL
VAR_INPUT
	value : BYTE;
END_VAR
VAR_OUTPUT
	index : DINT;
END_VAR
VAR
	i : DINT;	
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF _BytesCount > 0 THEN
	FOR i := 0 TO _BytesCount - 1 DO
		IF DataAddress[i] = value THEN
			index := i;
			Find := TRUE;
			RETURN;
		END_IF 	
	END_FOR
END_IF]]></ST>
      </Implementation>
    </Method>
    <Method Name="Get" Id="{7a2d32dc-2bf1-07fe-3b69-aed2ad5b300d}">
      <Declaration><![CDATA[METHOD Get : BYTE
VAR_INPUT
	index : DINT;
END_VAR
VAR
	exception : StandardException;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF DataAddress = 0 THEN
	exception.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), "Dynamic byte array is empty");
END_IF

IF index < 0 THEN
	exception.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), "Index is less then zero");
END_IF

IF index >= _BytesCount THEN
	exception.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), "Index is too large");
END_IF

Get := DataAddress[index];]]></ST>
      </Implementation>
    </Method>
    <Method Name="LoadFromAny" Id="{6ca12394-c5fc-0274-1ee4-d0bfc0727c06}">
      <Declaration><![CDATA[METHOD LoadFromAny : IListOfBytes
VAR_INPUT
	data : ANY;
	startIndex : UDINT := 0;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[LoadFromAny := LoadFromData(data.pValue, TO_UDINT(data.diSize), startIndex);]]></ST>
      </Implementation>
    </Method>
    <Method Name="LoadFromData" Id="{9fe65b5e-87b5-0537-23bd-6a15d825d74e}">
      <Declaration><![CDATA[METHOD LoadFromData : IListOfBytes
VAR_INPUT
	data : POINTER TO BYTE;
	dataSize : UDINT;
	startIndex : UDINT := 0;
END_VAR
VAR
	exception : StandardException;
	newMemory : POINTER TO BYTE;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[IF TO_DINT(startIndex) > _BytesCount THEN
	exception.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), "Start index is too large");
END_IF

IF dataSize < 0 THEN
	exception.Throw(NamespaceName, ClassName, __POUNAME(), __POSITION(), "Source bytes count is less then zero");
END_IF

LoadFromData := THIS^;
 
IF data = 0 OR_ELSE dataSize = 0 THEN
	RETURN;
END_IF

IF TO_DINT(startIndex + dataSize) > _MemorySize THEN
	// calculate new memory size
	_MemorySize := TO_DINT(startIndex + dataSize);
	
	// allocate new memory
	newMemory := __NEW(BYTE, TO_UDINT(_MemorySize));
	
	// copy existing bytes to new memory if needed
	IF startIndex > 0 THEN
		Tc2_System.MEMCPY(newMemory, DataAddress, TO_UDINT(startIndex));		
	END_IF
	
	// append new bytes
	Tc2_System.MEMCPY(newMemory + TO_DWORD(startIndex), data, TO_UDINT(dataSize));
	
	// set new bytes count
	_BytesCount := _MemorySize;
	
	// release old memory
	IF DataAddress <> 0 THEN
		__DELETE(DataAddress);		
	END_IF
	
	// save new memory reference
	DataAddress := newMemory;
ELSE
	// append new bytes
	Tc2_System.MEMCPY(dataAddress + TO_DWORD(startIndex), data, TO_UDINT(dataSize));
	
	// set new bytes count
	_BytesCount := TO_DINT(startIndex + dataSize);	
END_IF]]></ST>
      </Implementation>
    </Method>
    <Method Name="LoadFromGeneric" Id="{803d0535-a6e1-4d89-878a-9e90b4d80911}">
      <Declaration><![CDATA[METHOD LoadFromGeneric : IListOfBytes
