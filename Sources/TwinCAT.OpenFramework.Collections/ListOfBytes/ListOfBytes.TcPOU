    <Method Name="Clear" Id="{58795b0c-c9a9-0b7d-1801-4867f25906b7}">
      <Declaration><![CDATA[METHOD Clear : IListOfBytes
VAR_INPUT
	releaseMemory : BOOL := FALSE;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[Clear := THIS^;

IF releaseMemory AND_THEN _MemorySize > 0 THEN
	__DELETE(DataAddress);
	_MemorySize := 0;
END_IF

_BytesCount := 0;]]></ST>
      </Implementation>
    </Method>
