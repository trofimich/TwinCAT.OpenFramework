// Collection of bytes of dynamic size
FUNCTION_BLOCK ListOfBytes EXTENDS Core.Object IMPLEMENTS IListOfBytes
VAR_OUTPUT
	DataAddress : POINTER TO BYTE;
END_VAR
VAR
	_ClassName : STRING := __POUNAME();
	
	_MemorySize : DINT;
	_BytesCount : DINT;
END_VAR]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
    <Method Name="AppendAny" Id="{fa939ac2-b614-4bc3-8ef3-f524865ffb5f}">
      <Declaration><![CDATA[METHOD AppendAny : IListOfBytes
