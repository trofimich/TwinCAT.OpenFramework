        <ST><![CDATA[AppendAny := AppendData(data.pValue, TO_UDINT(data.diSize));]]></ST>
      </Implementation>
    </Method>
    <Method Name="AppendByte" Id="{90a35576-aaee-0fbc-214a-d1c0f81c72fb}">
