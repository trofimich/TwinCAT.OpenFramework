    <Method Name="AppendData" Id="{d35c3ee4-7daa-49d5-be43-e476b3efb046}">
      <Declaration><![CDATA[METHOD AppendData : IListOfBytes
VAR_INPUT
	data : POINTER TO BYTE;
	dataSize : UDINT;
END_VAR
VAR
	newMemory : POINTER TO BYTE;
END_VAR]]></Declaration>
      <Implementation>
        <ST><![CDATA[AppendData := THIS^;

IF data = 0 OR_ELSE dataSize = 0 THEN
	RETURN;
END_IF

// if existing memory is not enough
IF _BytesCount + TO_DINT(dataSize) > _MemorySize THEN
	// calculate new memory size
	_MemorySize := _BytesCount + TO_DINT(dataSize);
	
	// allocate new memory
	newMemory := __NEW(BYTE, TO_UDINT(_MemorySize));
	
	// copy existing bytes to new memory if needed
	IF _BytesCount > 0 THEN
		Tc2_System.MEMCPY(newMemory, DataAddress, TO_UDINT(_BytesCount));		
	END_IF
	
	// release old memory
	IF DataAddress <> 0 THEN
		__DELETE(DataAddress);		
	END_IF
	
	// save new memory reference
	DataAddress := newMemory;
END_IF

// append new bytes
Tc2_System.MEMCPY(DataAddress + TO_DWORD(_BytesCount), data, dataSize);

// set new bytes count
_BytesCount := _BytesCount + TO_DINT(dataSize);]]></ST>
      </Implementation>
    </Method>
