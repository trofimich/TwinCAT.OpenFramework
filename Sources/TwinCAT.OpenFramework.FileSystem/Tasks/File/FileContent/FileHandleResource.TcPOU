        <Declaration><![CDATA[]]></Declaration>
        <Implementation>
          <ST><![CDATA[IF __ISVALIDREF(_FileOpen) THEN
	FileHandle := _FileOpen.hFile;
END_IF]]></ST>
        </Implementation>
      </Get>
    </Property>
    <Property Name="FilePath" Id="{b9868a13-98bb-41c4-aa60-43cac9371bda}">
