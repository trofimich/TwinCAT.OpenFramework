        <Declaration><![CDATA[]]></Declaration>
        <Implementation>
          <ST><![CDATA[IF __ISVALIDREF(_FileOpen) THEN
	FilePath REF= _FileOpen.sPathName;
END_IF]]></ST>
        </Implementation>
      </Get>
    </Property>
    <Property Name="NamespaceName" Id="{4f8fd457-4527-453a-bb0a-b797e3616ec8}">
